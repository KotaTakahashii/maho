<h1>(自分の題名)</h1>
<h3>新規投稿ページ</h3>
<%= form_for @post do |f| %>
<div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, :size => 30 %>
</div>
<div class="field">
    <%= f.label :place %>
    <%= f.text_field :place, :size => 30 %>
</div>
<div class="field">
    <%= f.label :about %>
    <%= f.text_area :about, :size => 30 %>
</div>

<%= f.submit "投稿する" %>
<% end %>

<%= link_to "一覧に戻る", posts_path %>